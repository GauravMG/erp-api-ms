{
  "name": "auth-ms",
  "version": "1.0.0",
  "description": "this is generic auth-ms which will handle the uses authentication etc.",
  "main": "dist/app.js",
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "dev": "npm run build && concurrently --kill-others \" tsc -w --preserveWatchOutput -p tsconfig.json\" \"nodemon --watch dist --delay 5 dist/app.js\"",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "serve": "node dist/app.js",
    "test": "mocha --require ts-node/register src/test/**/*test.ts",
    "prettier:check": "prettier \"{src,test}/**/*.{ts,js}\" --list-different",
    "prettier:fix": "prettier \"{src,test}/**/*.{ts,js}\" --write",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:fix"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "node-mailjet": "^6.0.4",
    "nodemailer": "^6.9.7",
    "nodemon": "^3.0.1",
    "pg": "^8.11.3",
    "postgrator": "^5.0.1",
    "prettier": "^3.0.3",
    "rotating-file-stream": "^3.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/lodash": "^4.14.201",
    "@types/morgan": "^1.9.7",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.7",
    "typescript": "^5.2.2"
  }
}
